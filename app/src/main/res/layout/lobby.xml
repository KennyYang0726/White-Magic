						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="2020AIC主題"
						android:textSize="20sp"
						android:textColor="@color/text_color" />
					<Button
						android:id="@+id/button15"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="奧特曼聯動"
						android:textSize="20sp"
						android:textColor="@color/text_color" />
					<Button
						android:id="@+id/button16"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
