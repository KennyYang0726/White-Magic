						android:id="@+id/imageview18"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="13dp"
						android:src="@drawable/line"
						android:scaleType="fitXY"
						android:translationY="-10.0dp" />
