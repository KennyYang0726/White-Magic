<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#424242"
		android:orientation="vertical"
		android:layout_weight="1">
		<LinearLayout
			android:id="@+id/linear8"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#455A64"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageview15"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:src="@drawable/ic_delete_white"
				android:scaleType="fitXY" />
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="將下載的插件刪除"
				android:textSize="20sp"
				android:textColor="#FFFFFF" />
			<Button
				android:id="@+id/button1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:padding="8dp"
				android:text="刪除插件"
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#F44336"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1" />
		</LinearLayout>
		<ImageView
			android:id="@+id/imageview12"
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:src="@drawable/line"
			android:scaleType="fitXY" />
		<LinearLayout
			android:id="@+id/linear9"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#757575"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageview14"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:src="@drawable/ic_delete_white"
				android:scaleType="fitXY" />
			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="還原遊戲語音修改"
				android:textSize="20sp"
				android:textColor="#FFFFFF" />
			<Button
				android:id="@+id/button2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:padding="15dp"
				android:text="清除修改"
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#F44336"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1" />
		</LinearLayout>
		<ImageView
			android:id="@+id/imageview13"
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:src="@drawable/line"
			android:scaleType="fitXY" />
		<ScrollView
			android:id="@+id/vscroll1"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:id="@+id/linear11"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear10"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<ImageView
						android:id="@+id/imageview16"
						android:layout_width="280dp"
						android:layout_height="170dp"
						android:layout_marginTop="50dp"
						android:src="@drawable/non"
						android:scaleType="fitXY"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="35dp"
						android:padding="8dp"
						android:text="點擊圖片即可修改"
						android:textSize="16sp"
						android:textStyle="italic"
						android:textColor="#F44336"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="7dp"
						android:padding="8dp"
						android:text="【日文語音修改】"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="#5AB55E"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview9"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal"
						android:text="當前版本："
						android:textSize="18sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview12"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal"
						android:text="最新版本："
						android:textSize="18sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="center_horizontal" />
					<ImageView
						android:id="@+id/imageview17"
						android:layout_width="match_parent"
						android:layout_height="5dp"
						android:layout_marginTop="13dp"
						android:src="@drawable/line"
						android:scaleType="fitXY" />
					<ImageView
						android:id="@+id/imageview18"
						android:layout_width="280dp"
						android:layout_height="170dp"
						android:layout_marginTop="50dp"
						android:src="@drawable/non"
						android:scaleType="fitXY"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="35dp"
						android:padding="8dp"
						android:text="點擊圖片即可修改"
						android:textSize="16sp"
						android:textStyle="italic"
						android:textColor="#F44336"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="7dp"
						android:padding="8dp"
						android:text="【英文語音修改】"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="#E08F5F"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview10"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal"
						android:text="當前版本："
						android:textSize="18sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview13"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal"
						android:text="最新版本："
						android:textSize="18sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="center_horizontal" />
					<ImageView
						android:id="@+id/imageview22"
						android:layout_width="match_parent"
						android:layout_height="5dp"
						android:layout_marginTop="13dp"
						android:src="@drawable/line"
						android:scaleType="fitXY" />
					<ImageView
						android:id="@+id/imageview23"
						android:layout_width="280dp"
						android:layout_height="170dp"
						android:layout_marginTop="50dp"
						android:src="@drawable/non"
						android:scaleType="fitXY"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview8"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="35dp"
						android:padding="8dp"
						android:text="點擊圖片即可修改"
						android:textSize="16sp"
						android:textStyle="italic"
						android:textColor="#F44336"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="7dp"
						android:padding="8dp"
						android:text="【韓文語音修改】"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="#5C6BC0"
						android:layout_gravity="center_horizontal" />
					<TextView
						android:id="@+id/textview11"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal"
						android:text="已停更(韓服收了，無法更新)"
						android:textSize="18sp"
						android:textColor="#FFFFFF"
						android:layout_gravity="center_horizontal" />
				</LinearLayout>
				<com.google.android.gms.ads.AdView
					xmlns:ads="http://schemas.android.com/apk/res-auto"
					android:id="@+id/banner2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					ads:adSize="BANNER"
					ads:adUnitId="@string/banner1" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear7"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:background="#383838"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/imageview7"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/home"
			android:scaleType="fitCenter"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/imageview8"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/skin"
			android:scaleType="fitCenter"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/imageview9"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/voice2"
			android:scaleType="fitCenter"
			android:scaleX="1.1"
			android:scaleY="1.1"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/imageview10"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/hall"
			android:scaleType="fitCenter"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/imageview11"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/other"
			android:scaleType="fitCenter"
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>
